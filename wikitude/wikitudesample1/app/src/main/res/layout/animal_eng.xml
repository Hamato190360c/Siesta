<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_ani"
    tools:context="com.gashfara.wikitudesample1.AnimalEngActivity">




    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

        <!-- your content layout -->
        <ImageButton
            android:id="@+id/ontainonakama"
            android:layout_width="360dp"
            android:layout_height="480dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/ontaiengvannar" />

        <ImageButton
            android:id="@+id/beaver"
            android:layout_width="250dp"
            android:layout_height="5dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="300dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/beaver_eng" />

        <ImageButton
            android:id="@+id/kawauso"
            android:layout_width="250dp"
            android:layout_height="5dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="240dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/kawauso_eng" />


        <ImageButton
            android:id="@+id/ressar"
            android:layout_width="250dp"
            android:layout_height="5dp"
            android:layout_marginTop="260dp"
            android:layout_marginBottom="180dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/ressar_eng" />

        <ImageButton
            android:id="@+id/asika"
            android:layout_width="250dp"
            android:layout_height="5dp"
            android:layout_marginTop="320dp"
            android:layout_marginBottom="120dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/asika_eng" />

        <ImageButton
            android:id="@+id/mizudorieng"
            android:layout_width="250dp"
            android:layout_height="5dp"
            android:layout_marginTop="390dp"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/mizudori_eng" />

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"

            app:headerLayout="@layout/drawer_header"
            app:menu="@layout/drawer_eng" />

    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>