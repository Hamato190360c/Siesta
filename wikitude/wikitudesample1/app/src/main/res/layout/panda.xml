<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gashfara.wikitudesample1.PandaActivity"
    android:background="@drawable/background_ontai">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton

        android:layout_width="360dp"
        android:layout_height="220dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/panda_panda" />

    <ImageButton

        android:layout_width="300dp"
        android:layout_height="440dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/panda_detail" />

    <ImageButton

        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/panda_kai" />

    <ImageButton

        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/panda_mitarasi" />

    <ImageButton

        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/panda_midokoro" />

    <Button
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:text="ホームに戻る" />



</LinearLayout>


</ScrollView>
